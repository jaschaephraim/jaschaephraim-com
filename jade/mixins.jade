mixin article( item )
  article.item
    if item.image
      - var image = item.image;
      figure
        a( href=item.url, target='_blank' )
          img( src=imgUrl( 'content/' + image.file ), alt=item.title )
        if image.creator
          figcaption
            | image by 
            if image.url
              a( href=image.url)= image.creator
            else
              = image.creator
    != item.body
    +link( item, item.link, 'article-link' )

mixin link( item, text, clss )
  a( class=clss, href=item.url, target='_blank' )= text

